{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}

{
    "compilerOptions": {
      "outDir": "dist",
      "sourceMap": true,
      "baseUrl": "src",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "types": [
        "jest"
      ],
      "target": "ESNext",
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames":true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
  }
  
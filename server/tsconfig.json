{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "src/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"],
}

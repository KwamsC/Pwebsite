{
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "baseUrl": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "types": ["jest"],
    "target": "ES2022",
    "strict": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*.ts", "test/**/*"],
  "exclude": ["node_modules"],
}

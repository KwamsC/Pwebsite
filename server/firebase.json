{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "kwamsc/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 8081
    },
    "hosting": {
      "host": "0.0.0.0",
      "port": 5002
    },
    "logging": {
      "host": "0.0.0.0",
      "port": 4500
    },
    "ui": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 4000
    },
    "singleProjectMode": true
  }
}
